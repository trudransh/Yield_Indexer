# Database
DATABASE_URL="postgresql://user:password@localhost:5432/yield_indexer?schema=public"

# Arbitrum RPC (use your own for production)
ARBITRUM_RPC_URL="https://arb1.arbitrum.io/rpc"

# Optional: Use a premium RPC provider for better rate limits
# ARBITRUM_RPC_URL="https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY"

# vaults.fyi API Key (get from https://docs.vaults.fyi/api/api-overview)
# Track credits: https://labs.vaults.fyi/portal/credit_usage/
VAULTS_FYI_API_KEY="your-vaults-fyi-api-key-here"

# Credit-saving filters for vaults.fyi
# Higher TVL = fewer vaults = fewer credits used
MIN_TVL_USD=50000

# Historical data granularity: "1hour", "1day", "1week"
# Use "1week" to save credits on historical pulls (PRO feature)
HISTORY_GRANULARITY="1week"

# Indexer settings
INDEX_INTERVAL_HOURS=1
DISCOVERY_INTERVAL_HOURS=24

